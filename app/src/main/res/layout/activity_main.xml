RelativeLayout><?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"> <View
        android:id="@+id/video_screen"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:background="#222222" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_screen"
        android:text="NEXT"
        android:backgroundTint="#FF0000" /> <ImageButton
        android:id="@+id/btn_speaker"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@android:drawable/ic_btn_speak_now"
        android:backgroundTint="#00FF00" /> <Button
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="DOWNLOAD TO SD CARD"
        android:backgroundTint="#FF00FF" /> </RelativeLayout>
